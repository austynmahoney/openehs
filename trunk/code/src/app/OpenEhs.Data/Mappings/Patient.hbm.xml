<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">
  
  <class name="Patient" table="Patient">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="FirstName" />
    <property name="MiddleName" />
    <property name="LastName" />
    <property name="DateOfBirth" />
    <property name="Gender" />
    <property name="PhoneNumber" />
    
    <!--One-to-many mapping: Address-->
    <bag name="Address" lazy="false">
      <key column="AddressID" />
      <one-to-many class="Address" />
    </bag>
    
    <property name="BloodType" />
    <property name="TribeRace" />
    <property name="Religion" />
    <property name="OldPhysicalRecordNumb" />
    <property name="IsActive" />

    <!--Many-to-many mapping: Problems-->
    <bag name="Problem" table="PatientProblem">
      <key column="PatientID" />
      <many-to-many column="ProblemID" class="Problem" />
    </bag>
    
  </class>
</hibernate-mapping>