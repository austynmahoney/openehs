<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Patient" table="Patient">
    <id name="Id" column="PatientId">
      <generator class="native" />
    </id>
    <property name="FirstName" not-null="true" length="30" />
    <property name="MiddleName" not-null="false" length="30"/>
    <property name="LastName" not-null="true" length ="30"/>
    <property name="DateOfBirth" not-null="true"/>
    <property name="Gender" not-null="true" length="10"/>
    <property name="PhoneNumber" not-null="false" length="20"/>

    <many-to-one name="Address" column="AddressID" unique="true" cascade="all" />

    <property name="BloodType" not-null="false" length="10"/>
    <property name="TribeRace" not-null="false" length="30"/>
    <property name="Religion" not-null="false" length="30" />
    <property name="PatientNote" not-null="false" />
    <property name="OldPhysicalRecordNumber" column="OldPhysicalRecordNumb" not-null="false" />
    <property name="IsActive" not-null="true" />

    <many-to-one name="EmergencyContact" column="EmergencyContactID" unique="true" cascade="all" />

    <bag name="Allergies" table="PatientAllergy" cascade="none" lazy="false">
      <key column="PatientID" />
      <many-to-many column="AllergyID" class="Allergy" />
    </bag>
    
    
    <bag name="Problems" table="PatientProblem" cascade="none" lazy="false">
      <key column="PatientID" />
      <many-to-many column="ProblemID" class="Problem" />
    </bag>

    <bag name="PatientCheckIns" table="PatientCheckIn">
      <key column="PatientId" />
      <one-to-many class="PatientCheckIn" />
    </bag>
    
    <!--
    <bag name="Problems" table="PatientProblem">
      <key column="PatientID" />
      <many-to-many class="Problem" />
    </bag>

    <bag name="Invoice" table="Invoice">
      <key column="PatientId" />
      <one-to-many class="Invoice" />
    </bag>

    <bag name="PatientCheckIn" table="PatientCheckIn">
      <key column="PatientId" />
      <one-to-many class="PatientCheckIn" />
    </bag>
    -->
  </class>
</hibernate-mapping>