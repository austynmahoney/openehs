<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">
  
  <class name="Staff" table="Staff">
    <id name="Id" column="StaffID">
      <generator class="native" />
    </id>
    <property name="FirstName" not-null="true" length="30" />
    <property name="MiddleName" not-null="false" length="30" />
    <property name="LastName" not-null="true" length="30" />
    <property name="PhoneNumber" not-null="true" length="20" />
    <property name="StaffType" not-null="true" />
    <property name="LicenseNumber" not-null="false" length="20" />
    <one-to-one name="Address" class="Address" />
    <one-to-one name="User" class="User" />
    <property name="IsActive" not-null="true" />

    <bag name="Surgery" table="SurgeryStaff" cascade="none" lazy="false">
      <key column="StaffID" />
      <many-to-many column="SurgeryID" class="Surgery" />
    </bag>

    <many-to-one name="PatientCheckIns"
                 class="PatientCheckIn"
                 unique="true"
                 column="PatientCheckInID" />
    
  </class>
</hibernate-mapping>
