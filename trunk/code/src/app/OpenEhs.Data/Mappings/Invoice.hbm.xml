<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Invoice" table="Invoice">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Total" />
    <property name="Date" />

    <!--One-to-many mapping: Patient-->
    <bag name="Patient" lazy="false">
      <key column="PatientID" />
      <one-to-many class="Patient" />
    </bag>

    <!--One-to-many mapping: PatientCheckIn-->
    <bag name="PatientCheckIn" lazy="false">
      <key column="PatientCheckInID" />
      <one-to-many class="PatientCheckIn" />
    </bag>

    <property name="IsActive" />
    
    <!--TODO: Map this to InvoiceItem-->
    
  </class>
</hibernate-mapping>