<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Immunizations" table="Immunization">
    <id name="Id" column="ImmunizationID">
      <generator class="native" />
    </id>
    <property name="VaccineType" not-null="true" length="30" />
    <property name="DateAdministered" not-null="true" length="30" />
    <property name="Comments" not-null="true" length="30" />

    <bag name="Patients" table="PatientProblem" cascade="none" lazy="false">
      <key column="ProblemID" />
      <many-to-many column="PatientID" class="Patient" />
    </bag>

  </class>
</hibernate-mapping>