<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Invoice" table="Invoice">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Total" />
    <property name="Date" />
    <one-to-one name="Patient" />

    <!--One-to-many mapping: PatientCheckIn-->
    <bag name="PatientCheckIn" lazy="false">
      <key column="PatientCheckInID" />
      <one-to-many class="PatientCheckIn" />
    </bag>

    <!--One-to-many mapping: PatientCheckIn-->
    <bag name="LineItems" lazy="false">
      <key column="InvoiceID" />
      <one-to-many class="InvoiceLineItem" />
    </bag>
    
    <property name="IsActive" />

    <!--
    <bag name="Payment" lazy="false">
      <key column="InvoiceID" />
      <one-to-many class="Payment" />
    </bag>
    -->

  </class>
</hibernate-mapping>