<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Medication" table="Medication">
    <id name="Id" column="MedicationID">
      <generator class="native" />
    </id>
    <property name="Name" not-null="true" length="30" />
    <property name="Instruction" not-null="true" />
    <property name="StartDate" not-null="true" />
    <property name="ExpDate" not-null="true" />

    <many-to-one name="Patient" column="PatientID" unique="true" cascade="all" />

  </class>
</hibernate-mapping>