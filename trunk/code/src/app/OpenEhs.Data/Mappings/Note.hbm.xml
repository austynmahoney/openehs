<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Note" table="Note">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="Title" />
    <property name="Body" />
    <property name="DateCreated" />

    <!--One-to-many mapping: Staff-->
    <bag name="Staff" lazy="false">
      <key column="StaffID" />
      <one-to-many class="Staff" />
    </bag>

    <!--One-to-many mapping: PatientEncounter-->
    <bag name="PatientEncounter" lazy="false">
      <key column="PatientEncounterID" />
      <one-to-many class="PatientEncounter" />
    </bag>
    
    <property name="IsActive" />
  </class>
</hibernate-mapping>