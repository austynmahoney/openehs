<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Note" table="Note">
    <id name="Id" column="NoteID">
      <generator class="native" />
    </id>
    <property name="Title" not-null="true" length="30"/>
    <property name="Body" not-null="true" />
    <property name="DateCreated" not-null="true" />
    <one-to-one name="Author" class="Staff" />
    <one-to-one name="PatientCheckIns" class="PatientCheckIn" />
    <one-to-one name="NoteTemplateCategory" class="NoteTemplateCategory" />
    <property name="IsActive" not-null="true" />
  </class>
</hibernate-mapping>