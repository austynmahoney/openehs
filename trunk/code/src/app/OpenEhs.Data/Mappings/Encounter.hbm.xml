<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Encounter" table="PatientEncounter">
    <id name="Id" column="PatientEncounterID">
      <generator class="native" />
    </id>

    <many-to-one name="PatientCheckIn" column="PatientCheckInID" unique="true" cascade="all" />

    <property name="TimeIn" not-null="true" />
    <property name="TimeOut" not-null="false" />
    <property name="Comments" not-null="false" />
    <property name="Location" not-null="false" />
    <property name="Diagnosis" not-null="false" />
    
    <one-to-one name="Staff" class="Staff" />

    <bag name="Notes" table="Note">
      <key column="PatientEncounterId" />
      <one-to-many class="Note" />
    </bag>
    
    <bag name="Vitals" table="Vitals">
      <key column="PatientEncounterId" />
      <one-to-many class="Vitals" />
    </bag>
    
    <property name="AdmitReason" not-null="false" length="50" />
    <property name="IsActive" not-null="true" />
  </class>
</hibernate-mapping>