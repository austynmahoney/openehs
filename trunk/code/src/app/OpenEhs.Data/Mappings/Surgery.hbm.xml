<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="Surgery" table="Surgery">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="SurgeryType" />
    <property name="StartTime" />
    <property name="EndTime" />
    <property name="RoomNumber" />
    <property name="Comments" />
    <property name="PatientEncounter" />
    
    <!--Many-to-many mapping: Staff-->
    <bag name="Staff" table="SurgeryStaff">
      <key column="SurgeryID" />
      <many-to-many column="StaffID" class="Staff" />
    </bag>
    
  </class>
</hibernate-mapping>