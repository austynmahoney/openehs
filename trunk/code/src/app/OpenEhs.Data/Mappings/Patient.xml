<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">
  
  <class name="Patient" table="Patient">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="FirstName" />
    <property name="MiddleName" />
    <property name="LastName" />
    <property name="DateOfBirth" />
    <property name="Gender" />
    <property name="PhoneNumber" />
    <one-to-one name="Address" />
    <property name="BloodType" />
    <property name="TribeRace" />
    <property name="Religion" />
    <property name="OldPhysicalRecordNumber" column="OldPhysicalRecordNumb" />
    <property name="IsActive" />

    <!--One-to-many mapping: Problems-->
    <bag name="Problems" table="PatientProblem">
      <key column="PatientID" />
      <one-to-many class="Problem" />
    </bag>
    
    <!--One-to-many mapping: Allergies-->
    <bag name="Allergies" table="Allergy">
      <key column="PatientId" />
      <one-to-many class="Allergy" />
    </bag>

    <!--
    <bag name="Invoice" table="Invoice">
      <key column="PatientId" />
      <one-to-many class="Invoice" />
    </bag> -->

    <!--
    <bag name="PatientCheckIn" table="PatientCheckIn">
      <key column="PatientId" />
      <one-to-many class="PatientCheckIn" />
    </bag>
    -->
  </class>
</hibernate-mapping>