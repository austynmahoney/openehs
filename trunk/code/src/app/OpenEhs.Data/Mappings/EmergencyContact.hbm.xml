<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="EmergencyContact" table="EmergencyContact">
    <id name="Id">
      <generator class="native" />
    </id>
    <property name="FirstName" />
    <property name="LastName" />
    <property name="PhoneNumber" />
    <property name="Relationship" />

    <!--Many-to-one mapping: Address-->
    <bag name="Address" lazy="false">
      <key column="AddressID" />
      <many-to-one class="Address" />
    </bag>

    <!--One-to-many mapping: Patient-->
    <bag name="Patient" lazy="false">
      <key column="PatientID" />
      <one-to-many class="Patient" />
    </bag>
    
    <property name="IsActive" />
  </class>
</hibernate-mapping>