<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="OpenEhs.Domain"
                   namespace="OpenEhs.Domain">

  <class name="PatientEncounter" table="PatientEncounter">
    <id name="Id">
      <generator class="native" />
    </id>

    <!--One-to-many mapping: PatientCheckIn-->
    <bag name="PatientCheckIn" lazy="false">
      <key column="PatientCheckInID" />
      <one-to-many class="PatientCheckIn" />
    </bag>
    
    <property name="TimeIn" />
    <property name="TimeOut" />
    <property name="Comments" />
    <property name="Location" />
    <property name="Diagnosis" />

    <!--One-to-many mapping: Staff-->
    <bag name="Staff" lazy="false">
      <key column="StaffID" />
      <one-to-many class="Staff" />
    </bag>
    
    <property name="AdmitReason" />
    <property name="IsActive" />
  </class>
</hibernate-mapping>