@model System.Data.DataView
@{
    ViewBag.Title = "User Report";
}
@section head
{
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-en-GB.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $("#selectedDate").datepicker({ defaultDate: +7 });
    </script>
}
<h2>User Report</h2>
@using (Html.BeginForm())
{
    <input type="text" name="selectedDate" id="selectedDate" />
    <input type="submit" value="Run" />
}

<table>
    <thead>
            <tr>
                <th class="LastName">
                    Last Name
                </th>
                <th class="FirstName">
                    First Name
                </th>
                <th class="PatientsServed">
                    Patients Served
                </th>
            </tr>
    </thead>
    <tbody>
            @foreach (System.Data.DataRowView record in Model)
            {
                <tr>
                    <td class="LastName">
                        @String.Format("{0}", record[0].ToString() )
                    </td>
                    <td class="FirstName">
                        @String.Format("{0}", record[1].ToString() )
                    </td>
                    <td class="PatientsServed">
                        @String.Format("{0}", record[2].ToString())
                    </td>
                </tr>
            }
        </tbody>
</table>
