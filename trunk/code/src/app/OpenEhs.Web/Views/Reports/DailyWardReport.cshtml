@model OpenEhs.Web.Models.DailyWardReportViewModel
@{
    ViewBag.Title = "Daily Ward Report";
}

@section head
{
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-en-GB.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/reports/reports.dailyward.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#reports-tab").addClass("current");
        });
    </script>
}
<h2>Daily Ward Report</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Select a Location:</td>
            <td>
                <select id="WardSelect" name="WardSelect">
                    <option>Select Location...</option>
                    @foreach (var loc in Model.Locations)
                    {
                        <option value="@loc.Department">@loc.Department</option>
                    }
                </select>
            </td>
            <td>Select a Date:</td>
            <td>@Html.EditorFor(m => m.Date)</td>
            <td>&nbsp;</td><td><input type="submit" value="Select" id="ButtonDailyReportSubmit" name="ButtonDailyReportSubmit" /></td>
        </tr>
    </table>
}

<table>
    <tr>
        <td>Date</td>
        <td>@Model.Date</td>    
    </tr>
</table>


