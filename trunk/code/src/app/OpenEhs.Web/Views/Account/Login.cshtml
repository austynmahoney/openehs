@model OpenEhs.Web.Models.LogOnModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>OpenEHS Login</title>
        <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div id="container">
            <div id="logo">
                <img src="@Url.Content("~/images/openehs.logo.big.png")" alt="OpenEHS" />
            </div>
            <h2>Login</h2>
            <div id="loginForm" class="group">
                @using(Html.BeginForm()) {
                    <ul>
                        <li>
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName, new { @id = "usernameTextbox" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @id = "passwordTextbox" })
                            @Html.ValidationMessageFor(m => m.Password)
                            <!-- <div id="forgotPasswordLink"><a href="">Forgot password?</a></div> -->
                        </li>
                        <li>
                            <input type="submit" id="loginButton" value="Login" />
                        </li>
                    </ul>
                }
            </div>
            <div id="registrationLink">Don't have a user account? @Html.ActionLink("Register now!", "Register")</div>
        </div>
    </body>
</html>