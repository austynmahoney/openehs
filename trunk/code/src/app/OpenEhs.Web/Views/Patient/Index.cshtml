@model IEnumerable<OpenEhs.Domain.Patient>
@{
    ViewBag.Title = "Index";
}
@section head
{
    <link href="@Url.Content("~/Content/patient.css")" rel="Stylesheet" type="text/css" />
    <script type="text/javascript">
        $(function () 
		{
            $("#createNewPatientButton").button();
            $("#createNewPatientButton").click(function () 
			{
                return false;
            });

			$("#searchPatientButton").button();
			$("#searchPatientButton").click(function ()
			{
				return false;
			});
        });

		$(function() {
		var availableTags = [
			"item.FirstName",
			"item.LastName"
		];
		$( "#tags" ).autocomplete({
			source: availableTags
		});
	});

    </script>

	<style>
		#But1 {width: 300px; height: 24px;}
	</style>
}
<h2>
    Patient Search
</h2>

<p>
    @Html.ActionLink("New Patient", "Create", null, new { id = "createNewPatientButton" })

	<input type="text" ID="But1" style="font-size:16pt;" name="patientSearchBox" />

	@Html.ActionLink("Search", "Search", null, new { id = "searchPatientButton" })
</p>

<p>
	<table width="490">
    <tr>
        <th>
			Patient ID
        </th>
        <th>
            Name
        </th>
        <th>
            DOB
        </th>
		<th>
			Action
		</th>
    </tr>
    @foreach (var item in Model) 
	{
        <tr>
            <td>
                @String.Format("{0}", item.Id)
            </td>
            <td>
                @if (item.MiddleName != String.Empty) {
                    @String.Format("{2}, {0} {1}", item.FirstName, item.MiddleName, item.LastName)
                } else {
                    @String.Format("{1}, {0}", item.FirstName, item.LastName)
                }
            </td>
            <td>
                @String.Format("{0:d}", item.DateOfBirth)
            </td>
			<td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
        </tr>
    }
</table>


</p>

