@model OpenEhs.Web.Models.CreatePatientViewModel

@{
    ViewBag.Title = "New Patient";
}
@section head
{
        <style type="text/css">
            .fieldGroup 
            {
                float: left;
                margin: 5px 10px;
            }
            
            #GenderRadio label
            {
                display: inline;
            }
            
            #newPatientContainer
            {
                width: 650px;
                margin: 0 auto;
            }
            
            label
            {
                display: block;
                font-size: 1.4em;
            }
            
            input
            {
                font-size: 1.4em;
            }
            
            legend
            {
                font-size: 1.4em;
            }
            
            fieldset
            {
                border-radius: 5px;
                -moz-border-radius: 5px;
                -webkit-border-radius: 5px;
            }
            
            select
            {
                font-size: 1.4em;
            }
            
            h2, h3
            {
                margin-bottom: 10px;
            }
            
            #DateOfBirth
            {
                width: 100px;
            }
            
            #FirstName, #MiddleName, #LastName, #EcFirstName, #EcLastName
            {
                width: 170px;
            }
            
            #Street1, #Street2, #EcStreet1, #EcStreet2
            {
                width: 550px;
            }
            
            #basicInformation, #emergencyContactInformation
            {

            }
            
            #newPatientContainer form 
            {
                padding: 10px 20px;
                border-radius: 10px;
                -moz-border-radius: 10px;
                -webkit-border-radius: 10px;
                -moz-box-shadow: 0px 0px 20px #ccc;
                -webkit-box-shadow: 0px 0px 20px #ccc;
            }
            
            .navigation_button 
            {
                padding: 5px 10px;
            }
            
            #createPatientNavigation
            {
                float: right;
                margin-top: 10px;
            }            
        </style>


        <script src="@Url.Content("~/Scripts/bbq.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.5.custom.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.form.wizard-3.0.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-en-GB.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                $("#DateOfBirth").datepicker({
                    showOn: "button",
                    buttonImage: "/Content/themes/base/images/calendar.png",
                    buttonImageOnly: true,
                    changeYear: true,
                    yearRange: "1900:2011"
                });

                $("#newPatientContainer form").formwizard({
                    formPluginEnabled: true,
                    validationEnabled: true,
                    focusFirstInput: true,
                    disableUIStyles: true,
                    formOptions: {
                        success: function (data) { alert("Success!"); },
                        beforeSubmit: function (data) { alert("Before submit!"); },
                        dataType: "json",
                        resetForm: true
                    }
                });
            });
        </script>
}

<div id="newPatientContainer" class="group">
    <h2>New Patient</h2>
    @using (Html.BeginForm("Create", "Patient", FormMethod.Post, new { @id = "createPatientForm", @class = "group" }))
    {
        <div id="basicInformation" class="step">
            <h3>Basic Information</h3>
            <div class="group">
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.MiddleName)
                    @Html.TextBoxFor(m => m.MiddleName)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName)
                </div>
            </div>
            <div class="group">
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.DateOfBirth)
                    @Html.EditorFor(m => m.DateOfBirth)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.Gender)
                    <div id="GenderRadio">
                        @Html.RadioButtonFor(m => m.Gender, "Male", new { @id = "MaleGenderRadio" })
                        @Html.Label("MaleGenderRadio", "Male")
                        @Html.RadioButtonFor(m => m.Gender, "Female", new { @id = "FemaleGenderRadio" })
                        @Html.Label("FemaleGenderRadio", "Female")
                    </div>
                </div>
            </div>
            <div class="group">
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.PhoneNumber)
                    @Html.TextBoxFor(m => m.PhoneNumber)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.TribeRace)
                    @Html.TextBoxFor(m => m.TribeRace)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.Religion)
                    @Html.TextBoxFor(m => m.Religion)
                </div>
            </div>
            <fieldset>
                <legend>Address</legend>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.Street1)
                        @Html.TextBoxFor(m => m.Street1)
                    </div>
                </div>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.Street2)
                        @Html.TextBoxFor(m => m.Street2)
                    </div>
                </div>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.City)
                        @Html.TextBoxFor(m => m.City)
                    </div>
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.Region)
                        @Html.TextBoxFor(m => m.Region)
                    </div>
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.Country)
                        @Html.DropDownListFor(m => m.Country, new SelectList(new[] { "Ghana" }))
                    </div>
                </div>
            </fieldset>
        </div>
        <div id="emergencyContactInformation" class="step">
            <h3>Emergency Contact</h3>
            <div class="group">
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.EcFirstName)
                    @Html.TextBoxFor(m => m.EcFirstName)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.EcLastName)
                    @Html.TextBoxFor(m => m.EcLastName)
                </div>
            </div>
            <div class="group">
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.EcPhoneNumber)
                    @Html.TextBoxFor(m => m.EcPhoneNumber)
                </div>
                <div class="fieldGroup group">
                    @Html.LabelFor(m => m.EcRelationship)
                    @Html.DropDownListFor(m => m.EcRelationship, Model.Relationships)
                </div>
            </div>
            <fieldset>
                <legend>Address</legend>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.EcStreet1)
                        @Html.TextBoxFor(m => m.EcStreet1)
                    </div>
                </div>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.EcStreet2)
                        @Html.TextBoxFor(m => m.EcStreet2)
                    </div>
                </div>
                <div class="group">
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.EcCity)
                        @Html.TextBoxFor(m => m.EcCity)
                    </div>
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.EcRegion)
                        @Html.TextBoxFor(m => m.EcRegion)
                    </div>
                    <div class="fieldGroup group">
                        @Html.LabelFor(m => m.EcCountry)
                        @Html.DropDownListFor(m => m.EcCountry, new SelectList(new[] { "Ghana" }))
                    </div>
                </div>
            </fieldset>
        </div>
        <div id="createPatientNavigation">
            <input class="navigation_button" id="back" value="Back" type="reset" />
            <input class="navigation_button" id="next" value="Next" type="submit" />
        </div>    
    }
</div>