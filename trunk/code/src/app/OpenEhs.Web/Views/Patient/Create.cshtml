@model OpenEhs.Web.Models.PatientViewModel
@{
    ViewBag.Title = "Create";
}
@section head
{
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/patient.css")" rel="Stylesheet" type="text/css" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#patients-tab").addClass("current");
        });
    </script>
}
<h2>
    Create Patient</h2>
    <fieldset>
        <div class="modal-label">
            First Name:
        </div>
        <div>
            <input type="text" name="p_firstName" id="p_firstName" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Middle Name:
        </div>
        <div>
            <input type="text" name="p_middleName" id="p_middleName" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Last Name:
        </div>
        <div>
            <input type="text" name="p_lastName" id="p_lastName" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>   
        <div class="modal-label">
            Date of Birth:
        </div>
        <div>
            <input type="text" name="p_dob" id="p_dob" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>   
        <div class="modal-label">
            Gender:
        </div>
        <div>
            <input type="text" name="p_gender" id="p_gender" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>                 
        <div class="modal-label">
            Phone Number:
        </div>
        <div>
            <input type="text" name="p_phoneNumber" id="p_phoneNumber" class="modal-input text ui-widget-content ui-corner-all" />
        </div>          
        <div class="modal-label">
            Blood Type:
        </div>
        <div>
            <input type="text" name="p_bloodType" id="p_bloodType" class="modal-input text ui-widget-content ui-corner-all" />
        </div>          
        <div class="modal-label">
            Tribe/Race:
        </div>
        <div>
            <input type="text" name="p_tribeRace" id="p_tribeRace" class="modal-input text ui-widget-content ui-corner-all" />
        </div>  
        <div class="modal-label">
            Religion:
        </div>
        <div>
            <input type="text" name="p_religion" id="p_religion" class="modal-input text ui-widget-content ui-corner-all" />
        </div>  
    </fieldset>
    <fieldset>
    <h2>
     Patient Address</h2>
        <div class="modal-label">
            Street 1:
        </div>
        <div>
            <input type="text" name="p_address_street1" id="p_address_street1" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>  
        <div class="modal-label">
            Street 2:
        </div>
        <div>
            <input type="text" name="p_address_street2" id="p_address_street2" class="modal-input text ui-widget-content ui-corner-all" />
        </div>  
        <div class="modal-label">
            City:
        </div>
        <div>
            <input type="text" name="p_address_City" id="p_address_City" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>  
        <div class="modal-label">
            Region:
        </div>
        <div>
            <input type="text" name="p_address_Region" id="p_address_Region" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>  
        <div class="modal-label">
            Country:
        </div>
        <div>
            <input type="text" name="p_address_Country" id="p_address_Country" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
    </fieldset>          
    <fieldset>
        <h2>
        Emergency Contact</h2>
        <div class="modal-label">
            First Name:
        </div>
        <div>
            <input type="text" name="emergency_firstName" id="emergency_firstName" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Last Name:
        </div>
        <div>
            <input type="text" name="emergency_lastname" id="emergency_lastname" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Relationship:
        </div>
        <div>
            <input type="text" name="emergency_relationship" id="emergency_relationship" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Phone Number:
        </div>
        <div>
            <input type="text" name="emergency_phonenumber" id="emergency_phonenumber" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Street 1:
        </div>
        <div>
            <input type="text" name="ec_address_street1" id="ec_address_street1" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Street 2:
        </div>
        <div>
            <input type="text" name="ec_address_street2" id="ec_address_street2" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            City:
        </div>
        <div>
            <input type="text" name="ec_address_City" id="ec_address_City" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Region:
        </div>
        <div>
            <input type="text" name="ec_address_Region" id="ec_address_Region" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Country:
        </div>
        <div>
            <input type="text" name="ec_address_Country" id="ec_address_Country" class="modal-input text ui-widget-content ui-corner-all" />
        </div>

    <p>
        <input type="submit" value="Create" />
    </p>
    </fieldset>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
