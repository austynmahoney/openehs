@model OpenEhs.Web.Models.PatientViewModel
@{
    ViewBag.Title = "Create";
}
@section head
{
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/patient.css")" rel="Stylesheet" type="text/css" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#patients-tab").addClass("current");
        });
    </script>
}
<h2>
    Create Patient</h2>
    <fieldset>
        <div class="modal-label">
            First Name:
        </div>
        <div>
            <input type="text" name="p_firstName" id="p_firstName" class="required modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Middle Name:
        </div>
        <div>
            <input type="text" name="p_middleName" id="p_middleName" class="modal-input text ui-widget-content ui-corner-all" />
        </div>
        <div class="modal-label">
            Last Name:
        </div>
        <div>
            <input type="text" name="p_lastName" id="p_lastName" class="modal-input text ui-widget-content ui-corner-all" />
        </div>   
        <div class="modal-label">
            Date of Birth:
        </div>
        <div>
            <input type="text" name="p_dob" id="p_dob" class="modal-input text ui-widget-content ui-corner-all" />
        </div>   
        <div class="modal-label">
            Gender:
        </div>
        <div>
            <input type="text" name="p_gender" id="p_gender" class="modal-input text ui-widget-content ui-corner-all" />
        </div>                 
        
         
    <p>
        <input type="submit" value="Create" />
    </p>
</fieldset>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
