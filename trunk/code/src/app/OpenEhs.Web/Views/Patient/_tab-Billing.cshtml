@model OpenEhs.Web.Models.PatientViewModel
<div id="billingHeader" class="group">
    <h2 id="Billing">
        Billing</h2>
    <input id="invoiceAddButton" name="invoiceAddButton" type="button" value="Add" />
</div>
<div>
    <ul id="invoiceList">
        <table>
            <tr>
                <th>Invoice ID</th>
                <th>Date</th>
                <th>Total</th>
                <th>Payments</th>
            </tr>
            @foreach (var invoice in Model.Invoices)
            {
                @*<li class="group" id="@string.Format("{0}{1}", "billing_", invoice.Id)">
                    <div style="float: left;">@invoice.Date</div>
                    <div style="float: right;">@invoice.Total</div>
                </li>*@
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.Date</td>
                    <td>@invoice.Total</td>
                    <td>
                        @foreach (OpenEhs.Domain.Payment payment in invoice.Payments)
                        {
                            @payment.PaymentDate 
                            <span>GH$</span> 
                            @payment.CashAmount
                            <br />
                        }
                    </td>
                </tr>
            }
        </table>
    </ul>
</div>
<div id="AddInvoiceItem">
    <fieldset class="group" id="AddInvoiceItemFieldSet">
        <legend>Add New Line Item</legend>
        <label>
            <b>Description: </b>
        </label>
        <label id="selection">
            <b>Selection: </b>
        </label>
        <br />
        <label>
            Product:</label>
        <select name="productSelect" id="modal_GetProduct">
            <option value="">Select Product</option>
            @foreach (var product in Model.Products)
            {
                <option value="@product.Id">@product.Name</option>
            }
        </select><br />
        <label>
            Service:</label>
        <select name="serviceSelect" id="modal_GetService">
            <option value="">Select Service</option>
            @foreach (var service in Model.Services)
            {
                <option value="@service.Id">@service.Name</option>
            }
        </select><br />
        <label>
            Quantity:</label>
        <select name="QuantitySelect" id="modal_GetQuantity">
            <option value="">Select Quantity</option>
            @for(int i=0;i<100;i++)
            {
                <option value="@i">@i</option>
            }
        </select><br />
    </fieldset>
    <br />
    <button id="submitInvoiceItem">
    Add New Line Item</button>
</div>