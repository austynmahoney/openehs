@model OpenEhs.Domain.Patient

@{
    ViewBag.Title = "Details";
}

@section head
{
    <link href="@Url.Content("~/Content/jvert-tabs/jquery-jvert-tabs-1.1.4.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-jvert-tabs-1.1.4.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#patientView").jVertTabs();
        });
    </script>
}

<div id="patientView">
    <div>
        <ul>
            <li><a href="#patientView-Basic">Basic</li>
            <li><a href="#patientView-Allergies">Allergies</li>
            <li><a href="#patientView-Encounters">Encounters</li>
        </ul>
    </div>
    <div>
        <div id="#patientView-Basic">
            <h3>Basic patient information goes here.</h3>
        </div>
        <div id="#patientView-Allergies">
            <h3>Allergies go here.</h3>
        </div>
        <div id="#patientView-Encounters">
            <h3>Encounters go here.</h3>
        </div>
    </div>
</div>

<h2>Details</h2>

<fieldset>
    <legend>Patient</legend>

    <div class="display-label">FirstName</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">MiddleName</div>
    <div class="display-field">@Model.MiddleName</div>

    <div class="display-label">LastName</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">DateOfBirth</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateOfBirth)</div>

    <div class="display-label">PhoneNumber</div>
    <div class="display-field">@Model.PhoneNumber</div>

    <div class="display-label">BloodType</div>
    <div class="display-field">@Model.BloodType</div>

    <div class="display-label">TribeRace</div>
    <div class="display-field">@Model.TribeRace</div>

    <div class="display-label">Religion</div>
    <div class="display-field">@Model.Religion</div>

    <div class="display-label">OldPhysicalRecordNumber</div>
    <div class="display-field">@Model.OldPhysicalRecordNumber</div>

    <div class="display-label">IsActive</div>
    <div class="display-field">@Model.IsActive</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

