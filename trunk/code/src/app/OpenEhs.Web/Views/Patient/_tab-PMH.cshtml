@model OpenEhs.Web.Models.PatientViewModel

<div id="pmhHeader" class="group">
    <h2 id="pmh">
        Past Medical History
    </h2>
</div>

<br />

<p id="recentHeader">Past Visits</p>

<br />

<div id="selectVisitDiv">
	
	<select style="width: 250px; height: 40px; font-size: 25px; padding: 3px; background: none repeat scroll 0% 0% #FFFFCC;" name="visitPick">
		<option value="">Select Visit...</option>
		@foreach (var pastVisit in Model.PatientCheckIns)
		{
			<option value="@pastVisit.Id">@pastVisit.CheckInTime.ToString("dd/MM/yyyy")</option>
		}
	</select>

	<input id="submitSelectButton" name="submitSelectButton" type="button" value="Submit" /> 

</div>


<p id="summaryTitle">Visit Summary</p>















<br />
<br />
<br />
<br />
<br />
<br />
<br />

<div>
	<ul class="pmhHistoryList">
		@foreach (var checkin in Model.PatientCheckIns)
            {
                foreach (var surgery in checkin.Surgeries)
				{
		<li>
			<div style="float: left;"><b>Surgery Date: </b>@surgery.StartTime</div><br />
			<div style="float: left;"><b>Case Type: </b>@surgery.CaseType</div><br />

			 <div id="surgeryLink" class="surgeryLink">
	                Surgery Details...
             </div>
             <div id="surgeryInfo" class="surgeryInfo">
				<div><b>Start Time: </b>@surgery.StartTime</div>
				<div><b>End Time: </b>@surgery.EndTime</div>
			 </div>


			 <div id="noteLink" class="noteLink">
	                Note Details...
             </div>
             <div id="noteInfo" class="noteInfo">
				<div><b>Notes: </b>??????????????</div>
			 </div>

			 <div id="staffLink" class="staffLink">
	                Staff Details...
             </div>
             <div id="staffInfo" class="staffInfo">
				<div><b>Surgery Staff: </b></div>
				<div class="staffMargin">Surgeon: <b>Ryan Olson</b></div>
				<div class="staffMargin">Surgeon Assistant: <b>Cameorn Harp</b></div>
				<div class="staffMargin">Anaesthetist: <b>Matt Kimber</b></div>
				<div class="staffMargin">Anaesthetist Assistant: <b>Tommy Joe</b></div>
				<div class="staffMargin">Nurse: <b>Keri Holly</b></div>
				<div class="staffMargin">Consultant: <b>Jimmy John</b></div>
			 </div>
		</li>
		}
		}
	</ul>
</div>